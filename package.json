{
  "name": "smile-parser",
  "version": "0.2.0",
  "description": "Emoji parser written in javascript",
  "main": "./lib/smile_parser.js",
  "repository": "https://github.com/jlumme/smile-parser.git",
  "author": "jlumme <jesse.lumme@gmail.com>",
  "license": "MIT",
  "scripts": {
    "compile-emoji": "node ./compile.js",
    "test": "jest --coverage",
    "build": "rimraf ./lib/* && terser --compress --mangle -- ./src/smile_parser.js > ./lib/smile_parser.js && ncp ./src/minifiedEmoji.json ./lib/minifiedEmoji.json"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/runtime": "7.5.5",
    "babel-jest": "24.9.0",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "ncp": "2.0.0",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "terser": "4.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(js)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ],
    "collectCoverageFrom": [
      "./src/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/lib/**"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "targets": "> 0.25%, not dead"
        }
      ]
    ],
    "comments": false
  },
  "keywords": [
    "emoji",
    "smileys",
    "emoticon"
  ],
  "bugs": {
    "url": "https://github.com/jlumme/smile-parser/issues"
  },
  "homepage": "https://github.com/jlumme/smile-parser"
}
